{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/mova-guard.js\" --task post-format",
            "timeout": 30,
            "type": "command"
          }
        ],
        "matcher": "Edit|MultiEdit|Write"
      },
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/mova-guard.js\" --task post-test",
            "timeout": 90,
            "type": "command"
          }
        ],
        "matcher": "Edit|MultiEdit|Write"
      },
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/mova-observe.js\" --event PostToolUse --stdout-tail-bytes 4000 --stderr-tail-bytes 4000 --max-event-bytes 20000 --tail-lines 50 --output-dir .mova/episodes",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "Bash|Read|Edit|MultiEdit|Write"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/mova-guard.js\" --task pre-main",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "Edit|MultiEdit|Write"
      },
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/mova-guard.js\" --task pre-bash",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/mova-observe.js\" --event Stop --stdout-tail-bytes 4000 --stderr-tail-bytes 4000 --max-event-bytes 20000 --tail-lines 50 --output-dir .mova/episodes",
            "timeout": 5,
            "type": "command"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/skill-eval.js\"",
            "timeout": 5,
            "type": "command"
          }
        ]
      },
      {
        "hooks": [
          {
            "command": "node \".claude/hooks/mova-observe.js\" --event UserPromptSubmit --stdout-tail-bytes 4000 --stderr-tail-bytes 4000 --max-event-bytes 20000 --tail-lines 50 --output-dir .mova/episodes",
            "timeout": 5,
            "type": "command"
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": true,
  "mcp": {
    "enableAllProjectMcpServers": false,
    "enabledMcpjsonServers": [
      "context7"
    ]
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Read"
    ],
    "defaultMode": "acceptEdits"
  }
}
